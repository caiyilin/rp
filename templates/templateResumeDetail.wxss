.row-list {
  margin: 40rpx 0rpx;
}

.info {
  position: relative;
}

.base-row {
  display: flex;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #bdbdbd;
  position: relative;
}

.base-row-left {
  width: 30%;
  text-align: right;
  padding-right: 10rpx;
}

.row-text {
  color: #333;
  display: block;
}

.row-left {
  width: 60%;
}

.row-right {
  position: absolute;
  right: 0;
}

.wux-card__hd {
  padding: 0 !important;
}

.wux-card__content {
  float: left;
  margin-top: -18rpx;
  background: url(data:image/png;base64,) no-repeat;
  background-size: 210rpx;
  text-align: center !important;
  flex: initial !important;
  width: 230rpx;
  height: 80rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  color: #fff !important;
}

.sub-text {
  font-size: 26rpx;
}
